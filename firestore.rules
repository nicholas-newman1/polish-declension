rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User settings - only the owner can read/write
    match /users/{userId}/data/settings {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User declension review data - only the owner can read/write
    match /users/{userId}/data/reviewData {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User vocabulary review data (per direction) - only the owner can read/write
    match /users/{userId}/data/vocabularyReviewData-pl-en {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/data/vocabularyReviewData-en-pl {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User vocabulary settings (per direction) - only the owner can read/write
    match /users/{userId}/data/vocabularySettings-pl-en {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/data/vocabularySettings-en-pl {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User custom vocabulary - only the owner can read/write
    match /users/{userId}/data/customVocabulary {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User custom declension cards - only the owner can read/write
    match /users/{userId}/data/customDeclension {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User custom sentences - only the owner can read/write
    match /users/{userId}/data/customSentences {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User sentence review data (per direction) - only the owner can read/write
    match /users/{userId}/data/sentenceReviewData-pl-en {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/data/sentenceReviewData-en-pl {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User sentence settings (per direction) - only the owner can read/write
    match /users/{userId}/data/sentenceSettings-pl-en {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/data/sentenceSettings-en-pl {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User conjugation review data (per direction) - only the owner can read/write
    match /users/{userId}/data/conjugationReviewData-pl-en {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/data/conjugationReviewData-en-pl {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User conjugation settings (per direction) - only the owner can read/write
    match /users/{userId}/data/conjugationSettings-pl-en {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/data/conjugationSettings-en-pl {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User aspect pairs review data - only the owner can read/write
    match /users/{userId}/data/aspectPairsReviewData {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User aspect pairs settings - only the owner can read/write
    match /users/{userId}/data/aspectPairsSettings {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User rate limits - users can only read their own (writes done by Cloud Function)
    match /userRateLimits/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Sentences - public read, admin write
    match /sentences/{sentenceId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Vocabulary - public read, admin write
    match /vocabulary/{wordId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Declension cards - public read, admin write
    match /declensionCards/{cardId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Verbs - public read, admin write
    match /verbs/{verbId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Sentence tags config - public read, admin write
    match /config/sentenceTags {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}

